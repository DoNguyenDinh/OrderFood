<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:background="@color/order">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Ban :"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red">

        </TextView>

        <TextView
            android:id="@+id/txt_nameTable_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ten ban :"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="ma dat mon"
            android:textSize="24sp"
            android:textColor="@color/red">

        </TextView>

        <TextView
            android:id="@+id/txt_TotalCost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="$$$$"
            android:textSize="24sp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_TotalCost_order"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="total"
            android:textSize="24sp"
            android:textColor="@color/red">

        </TextView>
        <TextView
            android:id="@+id/txt_id_table_order"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="id"
            android:visibility="invisible"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_pay"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Thanh toan"
            android:onClick="payMoney">

        </Button>
        <Button
            android:id="@+id/btn_chitiet"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Chi tiet">

        </Button>
    </LinearLayout>
</LinearLayout>