<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.TableFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/custom"
            android:gravity="center"
            android:text="Table"
            android:textColor="@color/yellow"

            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/table_1"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="1"
            android:textSize="36sp"
            android:onClick="tableorder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/table_2"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="2"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/table_1"
            app:layout_constraintTop_toBottomOf="@+id/table_1" />
        <Button
            android:id="@+id/table_3"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="3"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/table_2"
            app:layout_constraintTop_toBottomOf="@+id/table_2" />
        <Button
            android:id="@+id/table_4"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="4"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/table_3"
            app:layout_constraintTop_toBottomOf="@+id/table_3" />
        <Button
            android:id="@+id/table_5"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="5"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/table_4"
            app:layout_constraintTop_toBottomOf="@+id/table_4" />

        <Button
            android:id="@+id/table_6"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="6"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/table_7"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="7"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="@+id/table_6"
            app:layout_constraintTop_toBottomOf="@+id/table_6" />
        <Button
            android:id="@+id/table_8"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="8"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="@+id/table_7"
            app:layout_constraintTop_toBottomOf="@+id/table_7" />
        <Button
            android:id="@+id/table_9"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="9"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="@+id/table_8"
            app:layout_constraintTop_toBottomOf="@+id/table_8" />

        <Button
            android:id="@+id/button_10"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:text="10"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="@+id/table_9"
            app:layout_constraintTop_toBottomOf="@+id/table_9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>